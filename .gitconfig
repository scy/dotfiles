[user]
	name = Tim Weber
	email = scy@scy.name

[interactive]
	singlekey = true

[url "ssh://github.com/"]
	pushInsteadOf = https://github.com/

[alias]
	a = add
	ap = add --patch
	c = commit
	ca = commit --all
	cam = commit --amend
	caam = commit --all --amend
	cl = clone --recurse-submodules
	d = diff
	ds = diff --staged
	ig = edit-ignore
	l = log
	lp = log --patch
	p = push
	s = status
